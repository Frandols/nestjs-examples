  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "assets": [],
    "watchAssets": true,
    "deleteOutDir": true
  },
  "sourceRoot": "src",
  "projects": {
    "monolith": {
      "type": "application",
      "entryFile": "topologies/monolith/apps/monolith.app"
    },
    "split-notifications.monolith": {
      "type": "application",
